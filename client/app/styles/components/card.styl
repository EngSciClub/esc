.card {
  @extends $card;

  &.piece {
    &.top {
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
      margin-bottom: 0;
      padding-bottom: 0;
    }

    &.middle {
      border-radius: 0;
      margin: 0;
      padding-top: 0;
      padding-bottom: 0;
    }

    &.bottom {
      border-top-left-radius: 0;
      border-top-right-radius: 0;
      margin-top: 0;
      padding-top: 0;
    }

    &.middle, &.bottom {
      position: relative;

      &:before {
        content: '';
        width: 100%;
        height: 2px;
        display: block;
        background-color: $color-white;
        position: absolute;
        top: -2px;
        left: 0;
      }
    }
  }

  &.only-heading {
    h1, h2, h3, h4, h5, h6 {
      margin: 0;
    }
  }
}

.card-wrapper {
  @extends .row;
}