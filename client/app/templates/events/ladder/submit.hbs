<div class="row">
    <div class="full col">
        {{#base-card tagName="section" class="only-heading"}}
            <h1>Match Submission</h1>
        {{/base-card}}
    </div>
    <div class="full col">
        {{#base-card tagName="section"}}
            <h2>Match Submission</h2>
						<p>
							Report your matches through this form. If you can't remember your password, send an email to 
							<a href="mailto:engsci.website+ladder@gmail.com">engsci.website+ladder@gmail.com</a>
						</p>
            <form class="centered">
                <label {{bind-attr for="view.player1.elementId"}}>Player 1's username</label>
                {{input value=name class=errors.player1.css type="text" placeholder="JDoe456" viewName="player1"}}

                <label {{bind-attr for="view.player2.elementId"}}>Player 2's username</label>
                {{input value=email class=errors.player2.css type="text" placeholder="JSmith123" viewName="player2"}}

                <label {{bind-attr for="view.winner.elementId"}}>Winner</label>
                {{input value=email class=errors.winner.css type="text" placeholder="1 or 2" viewName="winner"}}

                <label {{bind-attr for="view.password.elementId"}}>Password (Player 1)</label>
                {{input value=ticketNumber class=errors.password.css type="password" placeholder="Password" viewName="password"}}

                <div class="button-wrapper">
                    <button {{action submitMatch}} type="submit" {{bind-attr class=":primary formButtonLoading:loading"}}>
                           Match Submission
                    </button>
                </div>
                <div {{bind-attr class=":info-wrapper info.visible:active"}}>
                    <div {{bind-attr class=":info info.good:good info.error:error"}}>
                        {{#if info.good}}
                            <h3>Match Submitted</h3>
                            <p>
															Submitted that                             
														</p>
                        {{/if}}

                        {{#if info.error}}
                            <h3>Oops, something went wrong!</h3>
                            <p>
                                Check the above fields highlighted in red. The server indicated that
                                there were errors with the submitted information:
                            </p>
                            <ul>
                                {{#if errors.name}}
                                    <li>{{errors.name.message}}</li>
                                {{/if}}
                                {{#if errors.email}}
                                    <li>{{errors.email.message}}</li>
                                {{/if}}
                                {{#if errors.password}}
                                    <li>{{errors.password.message}}</li>
                                {{/if}}
                            </ul>
														<p>
																If the error persists, contact the Webmaster at <a href="mailto:engsci.website+ladder@gmail.com"> 
																engsci.website+ladder@gmail.com</a>
														</p>
                        {{/if}}
                    </div>
                </div>
            </form>
        {{/base-card}}
    </div>
</div>
